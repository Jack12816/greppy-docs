include ../mixins/_subsection

block content

  .row
    .col-sm-offset-3.col-sm-9
      h1
        i.fa.fa-gears
        |  Framework
  .row
    .col-sm-offset-3.col-sm-9
      ol.breadcrumb
        li
          span
            a(href="/") Documentation
        li.active
          span Framework
  .row
    .col-lg-12
      hr

