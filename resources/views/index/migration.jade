extends ../section
include ../mixins/_subsection

block header

  .row
    .col-sm-offset-3.col-sm-9
      h1
        i.fa.fa-flag
        |  Migration
  .row
    .col-sm-offset-3.col-sm-9
      ol.breadcrumb
        each crumb in breadcrumbs
          li
            a(href="#{basePath}#{crumb._path}") #{crumb._name}
        li.active
          span #{section._name}
  .row
    .col-lg-12
      hr

block subsections

  .row
    .col-sm-3#toc

    .col-sm-9#main
      .row
        each section in subsections
          +subsection(section)

